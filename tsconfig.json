{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/core/base/frameworks/shared/*"],
      "@exceptions/*": ["./src/core/base/frameworks/shared/exceptions/*"],
      "@filters/*": ["./src/core/base/frameworks/shared/filters/*"],
      "@guards/*": ["./src/core/base/frameworks/shared/guards/*"],
      "@interceptors/*": ["./src/core/base/frameworks/shared/interceptors/*"],
      "@middlewares/*": ["./src/core/base/frameworks/shared/middlewares/*"],
      "@pipes/*": ["./src/core/base/frameworks/shared/pipes/*"],
      "@responses/*": ["./src/core/base/frameworks/shared/responses/*"],
      "@utils/*": ["./src/core/base/frameworks/shared/utils/*"],
      "@health/*": ["./src/core/base/frameworks/health/*"],
      "@data-services/*": ["./src/core/base/frameworks/data-services/*"],
    },
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./.build",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "incremental": true,
  },
  "include": ["src/*.ts", "src/**/*.ts", "database/seeds/*.ts", "test/**/*.ts"],
  "exclude": [
    "./node_modules/*",
    "./node_modules/@types"
  ],
  "buildOptions": true,
  "compileOnSave": true
}
